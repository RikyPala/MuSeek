<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_dark"
    android:scrollbars="none"
    tools:context=".fragments.MyAdsInstrumentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/navBarMyAdsInstr"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="@color/blue_light"
            android:weightSum="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/homeButtonMyAdsInstr"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:background="@drawable/shadow_button"
                android:fontFamily="@font/cormorant_upright_bold"
                android:text="@string/home_button"
                android:textAllCaps="true"
                android:textColor="@color/grey_dark"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/myAdsTextViewMyAdsInstr"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:fontFamily="@font/cormorant_upright_bold"
                android:gravity="center"
                android:text="@string/my_ads_text_view"
                android:textAlignment="center"
                android:textColor="@color/grey_dark"
                android:textSize="35sp" />

        </TableRow>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMyAdsInstr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/navBarMyAdsInstr" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>