<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_dark"
    android:scrollbars="none"
    tools:context=".NewAdActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/photoPickerButtonNewAd"
            style="@android:style/ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/shadow_button"
            android:fontFamily="@font/belgrano"
            android:text="@string/photo_picker_button"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="70sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/brandEditTextNewAd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shadow_edit_text"
            android:ems="10"
            android:fontFamily="@font/cormorant_upright_bold"
            android:hint="@string/brand_edit_text"
            android:inputType="textPersonName"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textColor="@color/grey_dark"
            android:textColorHint="#8F000000"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photoPickerButtonNewAd"
            android:autofillHints="" />

        <EditText
            android:id="@+id/modelEditTextNewAd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shadow_edit_text"
            android:ems="10"
            android:fontFamily="@font/cormorant_upright_bold"
            android:hint="@string/model_edit_text"
            android:inputType="textPersonName"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textColor="@color/grey_dark"
            android:textColorHint="#8F000000"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/brandEditTextNewAd"
            android:autofillHints="" />

        <EditText
            android:id="@+id/priceEditTextNewAd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/shadow_edit_text"
            android:ems="10"
            android:fontFamily="@font/cormorant_upright_bold"
            android:hint="@string/price_edit_text"
            android:inputType="number|numberDecimal"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textColor="@color/grey_dark"
            android:textColorHint="#8F000000"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/modelEditTextNewAd"
            android:autofillHints="" />

        <TextView
            android:id="@+id/euroTextView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/belgrano"
            android:text="â‚¬"
            android:textAlignment="center"
            android:textColor="@color/grey_light"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/priceEditTextNewAd"
            app:layout_constraintTop_toBottomOf="@+id/modelEditTextNewAd" />

        <Spinner
            android:id="@+id/categorySpinnerNewAd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="19dp"
            android:background="@drawable/shadow_spinner"
            android:entries="@array/instrument_categories"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:spinnerMode="dialog"
            android:theme="@style/AppSpinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/priceEditTextNewAd" />

        <Button
            android:id="@+id/submitButtonNewAd"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shadow_button_blue_light"
            android:elevation="5dp"
            android:fontFamily="@font/belgrano"
            android:hapticFeedbackEnabled="true"
            android:text="Conferma"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categorySpinnerNewAd" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>