<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_dark"
    android:scrollbarSize="0dp"
    tools:context=".activities.HomepageActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/instrumentButton"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shadow_button"
            android:fontFamily="@font/boogaloo"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="@string/instrument_button"
            android:textColor="@color/blue_light"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bandButton"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/shadow_button"
            android:fontFamily="@font/boogaloo"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="@string/band_button"
            android:textColor="@color/red_light"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/instrumentButton" />

        <Button
            android:id="@+id/myProfileButtonHome"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/shadow_button_grey_light_wider"
            android:drawableTop="@drawable/profile_logo"
            android:drawableTint="#000000"
            android:elevation="5dp"
            android:fontFamily="@font/boogaloo"
            android:hapticFeedbackEnabled="true"
            android:paddingTop="20dp"
            android:text="@string/my_profile_text_view"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bandButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>